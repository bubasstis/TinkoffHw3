<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sem.tinkoffhw3.SecondNumFragment">

    <Button
        android:id="@+id/return_to_first_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1st num"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second_number"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

    <Button
        android:id="@+id/choose_operation"
        android:text="Choose operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_number"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
